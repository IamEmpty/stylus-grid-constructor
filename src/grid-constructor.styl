grid-constructor($amount = 12, $suffix = 'col', $padding = 15px)

  for $num in (1..$amount)
    $selector = '.' + $suffix + '-' + $num
    {$selector}
      width (100% / $amount * $num)
    $list = join(', ', $list, $selector)

  {$list}
    padding-right $padding
    padding-left $padding
    position relative
    min-height 1px
    float left
    box-sizing border-box

  .row
    margin-right -($padding)
    margin-left -($padding)
    &:before,
    &:after
      display table
      content " "
      clear both
